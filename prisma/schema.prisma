generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum TaskStatus {
  pending
  progress
  completed
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  tasks    Task[]

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String
  description String
  status      String   @default("pending") // Pode usar o enum TaskStatus se preferir
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@map("tasks")
}